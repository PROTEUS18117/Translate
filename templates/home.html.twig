{% extends 'base.html.twig' %}

{% block title %}Англо-русский словарь{% endblock %}
{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item active">Англо-русский словарь</li>
    </ol>
{% endblock %}
{% block body %}
    <div class="os">
        <div class="  text-center mt-5 pb-5">
            <h1 class="oswald">Нужен перевод?</h1>
            <h3>Мы поможем тебе его найти.</h3>
        </div>
        <div class="pt-5 ">
            <form class="mt-5 row g-3  justify-content-center" action="{{ path('word.search') }}" method="GET">
                <div class="col-md-6 "><label for="inputPassword2" class="visually-hidden ">Password</label>
                    <input
                            name="s"
                            class="form-control p-3 oswald" id="inputPassword2"
                            placeholder="Введите слово на английском языке:"></div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary mb-3 p-3 oswald">Перевести</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('test') }}
{% endblock %}