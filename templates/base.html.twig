<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22https://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body class="text-white bg-dark">
<div class="container">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-5 ">

        <div class="container-fluid">
            <a class="navbar-brand oswald" href="#">Translator</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('home') }}">Главная</a>
                    </li>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-dark" data-bs-toggle="modal"
                            data-bs-target="#csv_create"> Добавить через CSV
                    </button>  <!-- Modal -->

                    <div class="modal fade" id="csv_create" tabindex="-1" aria-labelledby="exampleModalLabel"
                         aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header"><h5 class="modal-title text-black" id="exampleModalLabel">Добавить через
                                        CSV</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label for="formFile" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Пример ввода файла по умолчанию</font></font></label>
                                        <input class="form-control" type="file" accept=".csv" id="formFile" name="csv">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть
                                    </button>
                                    <button type="button" class="btn btn-primary">Сохранить</button>
                                </div>
                            </div>
                        </div>
                    </div>


                    <li class="nav-item">


                        <!-- Button trigger modal -->
                        <button type="button" class="btn text-white" data-bs-toggle="modal"
                                data-bs-target="#exampleModal"> Добавить вручную
                        </button>  <!-- Modal -->
                        <div class="modal fade b" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                             aria-hidden="true">
                            <div class="modal-dialog ">
                                <div class="modal-content">
                                    <div class="modal-header"><h5 class="modal-title text-black" id="exampleModalLabel" >Добавление
                                            слов в словарь:</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="alert alert-success d-none" id="alert-message">
                                            <span class="oswald"></span>
                                        </div>
                                                                                  <div class="row">

                                                    <div class="col"><input type="text" class="form-control"
                                                                            placeholder="English"
                                                                            aria-label="First name"
                                                                            name="eng" id="eng"></div>
                                                    <div class="col"><input type="text" class="form-control"
                                                                            placeholder="Перевод"
                                                                            aria-label="Last name"
                                                                            name="rus" id="rus"></div>
                                                </div>



                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть
                                        </button>
                                        <button type="button" class="btn btn-primary" id="button_create"
                                                name="button_create">Добавить
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>

<div class="container">
    <div class="row">

        {% block body %}{% endblock %}
    </div>
</div>
</body>
</html>
